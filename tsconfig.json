{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "paths": { "@/*": ["./src/*"] }
  },
  "include": [".astro/types.d.ts", "**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": ["dist"]
}
